; (include_subdirs unqualified)
(copy_files# solvers/*.{ml,mli})

(rule
 (target stdlib.zci)
 (deps stdlib.zli)
 (action (run zeluc -nostdlib %{deps})))

(rule
 (target char.zci)
 (deps (:zli char.zli) stdlib.zci)
 (action (run zeluc %{zli})))

(rule
 (target complex.zci)
 (deps (:zli complex.zli) stdlib.zci)
 (action (run zeluc %{zli})))

(rule
 (target int32.zci)
 (deps (:zli int32.zli) stdlib.zci)
 (action (run zeluc %{zli})))

(rule
 (target int64.zci)
 (deps (:zli int64.zli) nativeint.zci stdlib.zci)
 (action (run zeluc %{zli})))

(rule
 (target nativeint.zci)
 (deps (:zli nativeint.zli) int32.zci stdlib.zci)
 (action (run zeluc %{zli})))

(rule
 (target random.zci)
 (deps (:zli random.zli) stdlib.zci int32.zci int64.zci nativeint.zci)
 (action (run zeluc %{zli})))

(rule
 (target string.zci)
 (deps (:zli string.zli) stdlib.zci)
 (action (run zeluc %{zli})))

(rule
 (target graphics.zci)
 (deps (:zli graphics.zli) stdlib.zci)
 (action (run zeluc %{zli})))

(rule
 (target basics.zci)
 (deps (:zli basics.zli) stdlib.zci)
 (action (run zeluc %{zli})))

(rule
 (target node.zci)
 (deps (:zli node.zli) stdlib.zci)
 (action (run zeluc %{zli})))

(rule
 (target run.zci)
 (deps (:zli run.zli) stdlib.zci)
 (action (run zeluc %{zli})))

(rule
 (target list.zci)
 (deps (:zli list.zli) stdlib.zci)
 (action (run zeluc %{zli})))

(rule
 (targets dump.zci dump.ml)
 (deps (:zli dump.zls) basics.zci list.zci)
 (action (run zeluc %{zli})))

(library
 (name zlstdlib)
 (libraries
  (select solvers.ml from
   (sundialsml -> solvers.sundials.ml)
   ( -> solvers.nosundials.ml))
  (select node.ml from
   (sundialsml -> node.sundials.ml)
   ( -> node.nosundials.ml))
  (select defaultsolver.ml from
   (sundialsml -> defaultsolver.sundials.ml)
   ( -> defaultsolver.nosundials.ml)))
 (public_name zelus)
 (wrapped false)
 (modules ztypes zls basics zlsolve lift dump solvers illinois odexx solvers defaultsolver zlsrun run node_base node))

(install
 (package zelus)
 (section share)
 (files stdlib.zci char.zci complex.zci int32.zci int64.zci nativeint.zci random.zci string.zci graphics.zci basics.zci node.zci run.zci list.zci dump.zci))