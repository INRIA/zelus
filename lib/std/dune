(rule
 (target stdlib.zci)
 (deps stdlib.zli)
 (action (run zeluc -nostdlib %{deps})))

(rule
 (targets
 int32.zci nativeint.zci int64.zci
 ; char.zci complex.zci
 ; random.zci string.zci graphics.zci basics.zci node.zci run.zci list.zci)
 )
 (deps (:zli
 ; char.zli complex.zli
 int32.zli nativeint.zli int64.zli
 ; random.zli string.zli graphics.zli basics.zli node.zli
 ; run.zli list.zli)
 )
 stdlib.zci)
 (action (run zeluc %{zli})))


(install
 (package zelus)
 (section share)
 (files stdlib.zci
 ; char.zci complex.zci
 int32.zci int64.zci
 ; nativeint.zci random.zci string.zci graphics.zci
 ; basics.zci node.zci run.zci list.zci dump.zci
 ))

