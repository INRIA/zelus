;(copy_files# solvers/*.{ml,mli})

(rule
 (target stdlib.zci)
 (deps stdlib.zli)
 (action (run ../../zeluc.exe -nostdlib %{deps})))

(rule
 (targets char.zci complex.zci int32.zci nativeint.zci
          int64.zci random.zci string.zci graphics.zci
	  basics.zci node.zci run.zci list.zci)
 (deps (:zli char.zli complex.zli int32.zli nativeint.zli
        int64.zli random.zli string.zli graphics.zli basics.zli
	node.zli run.zli list.zli) stdlib.zci)
 (action (run ../../zeluc.exe %{zli})))

