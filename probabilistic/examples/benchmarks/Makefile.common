.PHONY: build bench_per_particles bench_per_steps bench_mem_ideal bench publish

build: $(NAME).ml
	dune build run.exe

bench_per_particles: build
	time cat ../data | $(RUN) -exp \
			-num-runs $(NUMRUNS) \
			-max-particles 1000 \
			-incr $(INCR) \
			-perf perf.csv \
			-acc accuracy.csv

bench_per_steps: build
	time cat ../data | $(RUN) \
			-num-runs $(NUMRUNS) \
			-particles $(MAX) \
			-perf-step perf-step.csv \
			-mem-step mem.csv

bench_mem_ideal: build
	time cat ../data | $(RUN) \
			-num-runs 1 \
			-particles $(MAX) \
			-mem-ideal-step mem-ideal.csv

$(NAME).ml : $(NAME).zls
	$(ZELUC) -noreduce $(NAME).zls

%.zci: %.zli
	$(ZELUC) $<

clean:
	-rm -f *.zc*
	-rm -f $(NAME).ml

cleanall: clean
	dune clean
	-rm -f *~
