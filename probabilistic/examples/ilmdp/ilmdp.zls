(*   print_newline () *)

let node main () =
  let p_dist = Infer.infer_depth 100 5 agent () in
  let p = Distribution.draw p_dist in
  print_string ("P("^(string_of_int p)^") = " ^
                (string_of_float (exp (Distribution.score p_dist p))));
  print_newline ()
