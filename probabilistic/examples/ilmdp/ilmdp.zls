(* Integer Line MDP *)
(* First example of https://agentmodels.org/chapters/3a-mdp.html *)


let node agent (pstate, ()) = p where
  rec action = Infer.sample (pstate, Distribution.uniform_int (-1) 1)
  and p = 0 -> pre p + action
  and unit = Infer.factor(pstate, 100. *. exp (float (- abs (p - 10))))

