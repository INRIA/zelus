let node f x = o where
  rec o = x -> (pre o + x)
		
(* fenetre glissante *)
let node apply(n)(x) = t where
  rec forall i in 0 .. (n - 1), ti out t do
	let rec o = f i (* i -> (pre o + i) *) in
	do ti = o (* ti = f i *) done (* and acc = last acc + ti *)
      (* where
	last acc = 0 *)
      done

