
let hybrid test z = 0.0 where
  rec init y = 1.0
  and init w = 2.0
  and automaton 
      | Slipping ->
          local s_torque
          do
            s_torque = y
          until up(z) then do w = 3.0 in Locked

      | Locked ->
          local l_torque in
          do
            l_torque = w
          until up(z) then do y = 4.0 in Slipping

