let node f(x) returns (o)
  let rec h = false fby false fby not h in
  match h with
  | true ->
      let rec cpt = 0 -> pre cpt + 1 in
      do o = cpt done
  | false ->
      let rec cpt = 0 -> pre cpt + 1 in
      do o = cpt done

let node ff() =
  print_int (f 0);
  print_newline ()

