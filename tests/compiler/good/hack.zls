(* dichotomy search in an array *)
let rec dicho<<n>>(v, x:[n]'a) =
    match size n with
    | 0 -> false
    | _ -> match compare v x.(n/2) with
           | 0 -> true
           | 1 -> dicho<<n/2>>(v, x.(0 .. n/2 - 1))
           | _ -> dicho<<n-n/2-1>>(v, x.(n/2 + 1 .. n-1))

let main___1(x: [5]int) = dicho<<5>>(0, x)

