node AddEquivalence(a, b, c: bool) returns (ok: bool)
  var sum1, carry1, sum2, carry2: bool;
  let
     (sum1, carry1) = FullAdder(a, b, c);
     (sum2, carry2) = AdderReference(a, b, c);
     ok = (sum1 = sum2) and (carry1 = carry2);
  tel;

