(include_subdirs unqualified)

(rule
 (copy %{project_root}/zlconfig.ml zlconfig.ml))

(subdir parsing
  (ocamllex zllexer))

(subdir parsing
  (menhir (modules zlparser) (infer true) (flags --explain --table)))

(library
  (name zlcompilerlibs)
  (public_name zelus.zlcompilerlibs)
  (wrapped false)
  (modules :standard \ zeluc compiler simulator fixstep)
  (libraries menhirLib))

(executable
  (name zeluc)
  (modes (byte exe))
  (libraries unix menhirLib zlcompilerlibs)
  (modules zeluc compiler simulator fixstep)
  (promote (until-clean)))

(install
 (package zelus)
 (section bin)
 (files (zeluc.exe as zeluc)))
