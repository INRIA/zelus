(include_subdirs unqualified)

(rule
 (copy %{project_root}/config.ml config.ml))

(subdir parsing
	(ocamllex lexer))

(subdir parsing
	(menhir (modules parser) (infer true) (flags --explain --table)))

(executables 
    (names zeluc)
    (modes byte exe)
    (libraries unix menhirLib)
    (promote (until-clean) (into ..)))

