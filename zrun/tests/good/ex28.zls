(* https://en.wikipedia.org/wiki/Triangular_matrix#Forward_and_back_substitution*)
(* Forward subsitution *)
(* L is a lower triangular matrix *)
(* solve Lx = b *)
let node forward(m)(l, b) returns (x init (run vec 0)(0))
  forward i in 0 .. m-1, li in l, bi in b, x init last x do
    let r =
      forward j in 0 to i-1 returns (cpt init 0.0)
        do cpt = last cpt +. li.(j) *. (last x).(j) done in
    do
      x = [| last x with i <- (bi -. r) /. l.(m).(m)
    done
  done
	  
    
